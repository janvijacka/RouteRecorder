@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>

@{
    ViewData["Title"] = "Roles";
}
<h1>All Roles</h1>
<a asp-action="Add" class="btn btn-primary">Add Role</a>
<div class="d-flex flex-column">
    <div class="row">
        <div class="col-12 col-xl-11 col-xxl-10">
            <table class="table mt-3">
                <thead>
                    <tr>
                        <th class="text-center">Name</th>
                        <th class="text-center">Actions</th>
                        <th class="text-center">ID</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var role in Model)
                    {
                        <tr>
                            <td class="text-center">@role.Name</td>
                            <td class="text-center">
                                <div class="d-flex justify-content-center">
                                    <a class="btn btn-sm btn-primary me-2" asp-action="Assign" asp-route-id="@role.Id">Assign</a>
                                    <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                    </form>
                                </div>
                            </td>
                            <td class="text-center">@role.Id</td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="d-flex justify-content-end">
                <a asp-action="Index" asp-controller="Users" class="btn btn-secondary">Back</a>
            </div>
        </div>
    </div>
</div>
